{
  "expo": {
    "name": "attendance_checking",
    "slug": "attendance_checking",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/splash_icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash_screen_bg.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/splash_screen_bg.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": ["expo-router"],
    "scheme": "attendance-checker"
  }
}
